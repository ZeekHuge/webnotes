{
    "manifest_version": 2,
    "name": "webnotes@notmyidea.org",
    "description": "Publish the selected text to a webpage.",
    "version": "1.0",
    "homepage_url": "https://www.notmyidea.org",

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    "background": {
        "scripts": ["purify.js", "background.js"]
      },

    "commands": {
      "capture-clipboard": {
        "suggested_key": {"default": "Ctrl+Shift+U" },
        "description": "Publish the selected text as a webnote."
      }
  },
  "permissions": ["storage", "notifications", "<all_urls>"],
  "options_ui": {
    "page": "options.html"
  }
}
